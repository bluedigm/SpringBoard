<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//dtd mapper 3.0//en"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.user">
	<insert id="insert">
		insert into user(username,nickname,email,password)
		values(#{username},#{nickname},#{email},#{password})
	</insert>
	<delete id="delete">
		delete from user
		where username = #{username}
	</delete>
	<select id="select">
		select * from user
		where username = #{username}
	</select>
	<select id="searchUsername">
		select * from user
		where {username like
		'%#{username}%'}
	</select>
	<select id="searchNickname">
		select * from user
		where {nickname like
		'%#{nickname}%'}
	</select>
	<select id="searchEmail">
		select * from user
		where {email like '%#{email}%'}
	</select>
	<select id="searchUsernameNickname">
		select * from user
		where {username like
		'%#{username}%' and nickname like '%#{nickname}%'}
	</select>
	<select id="searchUsernameEmail">
		select * from user
		where {username like
		'%#{username}%' and email like '%#{email}%'}
	</select>
	<select id="searchNicknameEmail">
		select * from user
		where {nickname like
		'%#{nickname}%' and email like '%#{email}%'}
	</select>
	<select id="search">
		select * from user
		where {username like
		'%#{username}%' and nickname like
		'%#{nickname}%' and email like
		'%#{email}%'}
	</select>
	<update id="update">
	</update>
</mapper>