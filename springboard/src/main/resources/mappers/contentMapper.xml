<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//dtd mapper 3.0//en"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.content">
	<resultMap type="com.bluedigm.springboard.entity.ContentDAO"
		id="content">
		<result property="id" column="id" />
		<result property="userId" column="id_user" />
		<result property="boardId" column="id_board" />
		<result property="title" column="title" />
		<result property="text" column="text" />
		<result property="createAt" column="time_create" />
		<result property="updateAt" column="time_update" />
	</resultMap>
	<insert id="insert">
		insert into
		content(id_user,id_board,title,text)
		values(#{userId},#{boardId},#{title},#{text})
	</insert>
	<delete id="delete">
		delete from content
		where id=#{id}
	</delete>
	<select id="select" resultMap="content">
		select * from content
		where
		id=#{id}
	</select>
	<select id="search" resultMap="content">
		select * from content
		where {title
		like'%#{title}%' and
		text like'%#{text}%'}
	</select>
	<update id="update">
		update content
		set id_user=#{userId},
		id_board=#{boardId},
		title=#{title}, text=#{text}
		where id=#{id}
	</update>
</mapper>