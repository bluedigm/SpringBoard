<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//dtd mapper 3.0//en"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.member">
	<resultMap type="com.bluedigm.springboard.entity.MemberDAO"
		id="member">
		<result property="userId" column="id_user" />
		<result property="boardId" column="id_board" />
		<result property="flagOp" column="flag_op" />
		<result property="memberAt" column="time_member" />
		<result property="managerAt" column="time_manager" />
	</resultMap>
	<resultMap type="com.bluedigm.springboard.entity.UserDAO"
		id="user">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="nick" column="nick" />
		<result property="email" column="email" />
		<result property="password" column="password" />
		<result property="createAt" column="time_create" />
		<result property="updateAt" column="time_update" />
	</resultMap>
	<resultMap type="com.bluedigm.springboard.entity.BoardDAO"
		id="board">
		<result property="id" column="id" />
		<result property="link" column="link" />
		<result property="title" column="title" />
		<result property="text" column="text" />
		<result property="createAt" column="time_create" />
		<result property="updateAt" column="time_update" />
	</resultMap>
	<resultMap
		type="com.bluedigm.springboard.entity.join.MemberJoin" id="memberJoin">
		<collection property="member" resultMap="member"></collection>
		<collection property="user" resultMap="user"></collection>
		<collection property="board" resultMap="board"></collection>
	</resultMap>
	<insert id="insert">
		insert into
		member(id_user,id_board,flag_op)
		values(#{userId},#{boardId},#{flagOp})
	</insert>
	<update id="update">
		update member
		set flag_op=#{flagOp}
		where
		id_user=#{userId}
		and id_board=#{boardId}
	</update>
	<delete id="delete">
		delete from member
		where id_user=#{userId} and
		id_board=#{boardId}
	</delete>
	<select id="select" resultMap="member">
		select * from member
		where
		id_user=#{userId} and id_board=#{boardId}
	</select>
	<select id="selectJoin" resultMap="memberJoin">
		select *
		from
		member m, user u, board b
		where
		u.id=#{id} and m.id_user=u.id and m.id_board=b.id
	</select>
	<select id="searchU" resultMap="member">
		select * from member
		where
		id_user=#{userId}
	</select>
	<select id="searchB" resultMap="member">
		select * from member
		where
		id_board=#{boardId}
	</select>
</mapper>