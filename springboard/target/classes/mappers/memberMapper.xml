<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//dtd mapper 3.0//en"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.member">
	<resultMap type="com.bluedigm.springboard.entity.MemberDAO"
		id="member">
		<result property="userId" column="id_user" />
		<result property="boardId" column="id_board" />
		<result property="flag" column="flag" />
		<result property="memberAt" column="time_member" />
		<result property="managerAt" column="time_manager" />
	</resultMap>
	<insert id="insert">
		insert into
		member(id_user,id_board,flag)
		values(#{userId},#{boardId},#{flag})
	</insert>
	<delete id="delete">
		delete from member
		where id_user=#{userId} and
		id_board=#{boardId}
	</delete>
	<select id="select" resultMap="member">
		select * from member
		where
		id_user=#{userId} and id_board=#{boardId}
	</select>
	<select id="searchU" resultMap="member">
		select * from member
		where id_user=#{userId}
	</select>
	<select id="searchB" resultMap="member">
		select * from member
		where id_board=#{boardId}
	</select>
	<update id="update">
		update member
		set flag=#{flag}
		where
		id_user=#{userId}
		and id_board=#{boardId}
	</update>
</mapper>